<div class="text-center top-margin bottom-margin">
<h1 class="slideExpandUp">Phase 10 Scorekeeper</h1>
<p>Paper is so passÃ©</p>
<%= link_to "Start a new game!", new_game_path, class: "btn btn-primary" %>
</div>
<h4 class="text-center">Recent Games</h4>
<div class="black-box">
<table class="table table-hover">
  <thead>
    <tr>
      <th>Started</th>
      <th>Winner</th>
      <th>Game Time</th>
    </tr>
  </thead>
  <tbody>
    <% @games.order(created_at: :desc).each do |game|%>
      <tr>
        <th scope="row"><%= link_to date_format(game.created_at), game_path(game) %></th>
        <td><%= game.winner %></td>
        <td><%= (game.updated_at - game.created_at)/60 %> minutes</td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
